"VertexLitGeneric"
{
	$basetexture	"viper/mw/weapons/m1911/weapon_vm_pi_mike1911_slidelong_camo_d"
	$bumpmap	"viper/mw/weapons/m1911/weapon_vm_pi_mike1911_slidelong_camo_n"
	$phongexponenttexture	"viper/mw/weapons/m1911/weapon_vm_pi_mike1911_slidelong_camo_s"

	"$color2"	"[ .2 .2 .2 ]"

	//Roughness / Softness
	$phong 1
	$phongboost 15
	$phongalbedotint	1
	//in ps we do adjustements - levels - 0.4 as the number in the middle
	//then we do 1 / [number in the middle] we get phongboost
	//this allows source to highlight details better

	$phongfresnelranges "[1 4 6]"
	//x = front facing, y = in between, z = parallel facing


	$emissiveBlendEnabled	"1"
	$emissiveBlendTexture	"color/white"
	$emissiveBlendBaseTexture	"viper/mw/weapons/m1911/weapon_vm_pi_mike1911_slidelong_e"
	$emissiveBlendFlowTexture	"color/white"
	$emissiveBlendStrength	"1"
	$emissiveBlendTint	"[1 1 1]"
	$emissiveBlendScrollVector	"[0 0]"

	//Metalness, keep like this?
	$envmap	"env_cubemap"
	$blendTintByBaseAlpha "1"
	$basemapalphaenvmapmask	1

	"Proxies"
	{
		"MwEnvMapTint"
		{
			"min" "0"
			"max" "1"
		}
	}
}