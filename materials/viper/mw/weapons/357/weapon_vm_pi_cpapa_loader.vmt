"VertexLitGeneric"
{
	$basetexture	"viper/MW/weapons/357/weapon_vm_pi_cpapa_loader_d"
	$bumpmap	"viper/MW/weapons/357/weapon_vm_pi_cpapa_loader_n"
	$phongexponenttexture	"viper/MW/weapons/357/weapon_vm_pi_cpapa_loader_s"

	"$color2"	"[ .2 .2 .2 ]"

	//Roughness / Softness
	$phong 1
	$phongboost 2.5
	$phongalbedotint	1
	//in ps we do adjustements - levels - 0.4 as the number in the middle
	//then we do 1 / [number in the middle] we get phongboost
	//this allows source to highlight details better

	$phongfresnelranges "[1 4 6]"
	//x = front facing, y = in between, z = parallel facing

	//Metalness, keep like this?
	$envmap	"env_cubemap"
	$blendTintByBaseAlpha "1"
	$basemapalphaenvmapmask	1
	$envmapfresnel	1	

	"Proxies"
	{
		"MwEnvMapTint"
		{
			"min" "0"
			"max" "0.35"
		}
	}
}