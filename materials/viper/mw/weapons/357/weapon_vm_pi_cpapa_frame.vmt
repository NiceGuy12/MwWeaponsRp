"VertexLitGeneric"
{
	$basetexture	"viper/MW/weapons/357/weapon_vm_pi_cpapa_frame_c"
	$bumpmap	"viper/MW/weapons/357/weapon_vm_pi_cpapa_frame_n"
	$phongexponenttexture	"viper/MW/weapons/357/weapon_vm_pi_cpapa_frame_m"

	"$color2"	"[ .2 .2 .2 ]"

	//Roughness / Softness
	$phong 1
	$phongboost 3
	$phongalbedotint	1
	//in ps we do adjustements - levels - 0.4 as the number in the middle
	//then we do 1 / [number in the middle] we get phongboost
	//this allows source to highlight details better

	$phongfresnelranges "[2 4 6]"
	//x = front facing, y = in between, z = parallel facing

	//Metalness, keep like this?
	$envmap	"env_cubemap"
	$blendTintByBaseAlpha "1"
	$basemapalphaenvmapmask	1
	$envmapfresnel	0.5	
	$envmaptint	"[ .15 .15 .15 ]"

	"Proxies"
	{
		"MwEnvMapTint"
		{
			"min" "0"
			"max" "1"
		}
	}
}